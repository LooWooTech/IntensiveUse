@using IntensiveUse.Helper;
@model IEnumerable<IntensiveUse.Models.EconomyChange>
@{
    ViewBag.Title = "上一级行政区数据发生改变";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int SerialNumber = 1;
}
@if (ViewBag.Flag)
{
    <a href="/Home/City?City=@ViewBag.County" class="btn btn-xs btn-success">@(ViewBag.County)</a>
}
else
{
    <a href="/Home/County?City=@(ViewBag.City)&&County=@(ViewBag.County)" class="btn btn-xs btn-success">@(ViewBag.City)-@(ViewBag.County)</a>
}


<table class="table table-bordered">
    <tr>
        <th>序号</th>
        <th>年份</th>
        <th>数据类型</th>
        <th>原始数据</th>
        <th>更新数据</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(SerialNumber++)</td>
            <td>@(item.Year)</td>
            <td>@(item.Type.GetDescription())</td>
            <td>@(Math.Round(item.Original,2))</td>
            <td>@(Math.Round(item.BrandNew,2))</td>
        </tr>
    }
</table>
