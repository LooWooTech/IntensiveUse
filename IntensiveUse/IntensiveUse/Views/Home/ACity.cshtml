@using IntensiveUse.Models
@using IntensiveUse.Helper
@{
    ViewBag.Title = "全国数据之地级市";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Region region = ViewBag.Region;
    var list = ViewBag.Countys;
}

<div style="position:relative;">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#Down" data-toggle="tab"><i class="glyphicon glyphicon-download"></i>&nbsp;下载</a></li>
        <li class=""><a href="#History" data-toggle="tab"><i class="glyphicon glyphicon-hdd"></i>&nbsp;数据源</a></li>
    </ul>
</div>

<div class="tab-content">

    <div class="tab-pane fade active in"  id="Down">
        <div class="input-group" style="float:right;">
            <label for="AYear" class="control-label">年份选择：</label>
            <select name="AYear">
                @{
                    var Ayear = DateTime.Now.Year - 1;
                    while (Ayear > 2013)
                    {
                        <option value="@Ayear">@(Ayear)年</option>
                        Ayear--;
                    }
                }
            </select>
        </div>


        <table class="table table-bordered">
            <tr>
                <th>输出表单名称</th>
                <th style="width:350px;">数据导入</th>
                <th style="width:300px;">下载</th>

            </tr>
            @foreach (OutputExcel item in Enum.GetValues(typeof(OutputExcel)))
            {
                if ((int)item < 14)
                {
                    <tr>
                        <td>@(item.ToString())-@(item.GetDescription())</td>
                        <td>
                            @if (item == OutputExcel.附表1A6 || item == OutputExcel.附表1A5)
                            {
                                <form class="form-inline" method="post" action="/Home/UploadOutExcel" enctype="multipart/form-data" style="float:right">
                                    <div class="input-group">
                                        <input type="file" name="file" style="width:200px; height:30px;" class="form-control" />
                                        <input type="text" name="Year" class="form-control" value="@(DateTime.Now.Year-1)" style="display:none;" />
                                        <input type="text" value="@(item.ToString())" name="Type" style="display:none;" />
                                        <input type="text" name="City" value="@(region.BelongCity)" style="display:none" />
                                        <button type="submit" class="btn btn-success btn-sm">上传</button>
                                    </div>
                                </form>
                            }
                        </td>
                        <td>
                            <form class="form-inline" method="post" action="/Home/ADownLoad" style="float:right">
                                @if (item == OutputExcel.附表1A2)
                                {
                                    <select name="name">
                                        @foreach (var city in list)
                                        {
                                            <option value="@city">@city</option>
                                        }
                                    </select>
                                }
                                <input type="text" name="Year" value="@(DateTime.Now.Year-1)" style="display:none" />
                                <input type="text" value="@(item)" style="display:none" name="Excel" />
                                <input type="text" value="@(region.Province)" name="Province" style="display:none" />
                                <input type="text" value="@(region.BelongCity)" name="BelongCity" style="display:none" />
                                <button type="submit" class="btn btn-primary btn-xs">下载</button>

                            </form>
                        </td>

                    </tr>
                }

            }
        </table>
    </div>


    <div class="tab-pane fade" id="History">
        <table class="table table-bordered">
            <tr>
                <th rowspan="2">年份</th>
                <th rowspan="2">人口数据</th>
                <th rowspan="2">经济数据</th>
                <th colspan="3">土地利用现状数据</th>
                <th colspan="2">土地供应数据</th>
                <th rowspan="2">指标理想值</th>
                <th rowspan="2">指数权重</th>
                <th rowspan="2">分指数权重</th>
                <th rowspan="2">指标权重</th>
                <td rowspan="2">操作</td>
            </tr>
            <tr>
                <th>农用地</th>
                <th>建设用地</th>
                <th>新增建设用地</th>
                <th>土地供应量</th>
                <th>批准批次土地供应</th>
            </tr>
            @*@foreach (var item in History.Keys)
            {
                var val = History[item];
                <tr>
                    <td>@item</td>
                    @foreach (var entity in val)
                    {
                        <td>
                            @if (entity)
                            {
                                <i class="glyphicon glyphicon-ok text-success"></i>
                            }
                            else
                            {
                                <i class="glyphicon glyphicon-remove text-danger"></i>
                            }
                        </td>

                    }
                    <td><a href="/Home/Delete?City=@(City)&&Year=@(item)" class="btn btn-danger btn-xs" name="danger">删除</a></td>
                </tr>
            }*@
        </table>
    </div>
</div>

<script>
    $(function () {
        $("[name='AYear']").click(function () {
            var value = $(this).val();
            $("[name='Year']").val(value);
        })
    })
</script>
